<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Login_Register.RegisterActivity"
    android:background="@color/blue">

    <ImageButton
        android:id="@+id/dkdangnhap"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:src="@drawable/baseline_arrow_back_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="120dp"
            android:paddingBottom="20dp"
            android:text="@string/register"
            android:textSize="50dp"
            android:textStyle="bold"
            android:drawablePadding="8dp"/>


        <EditText
            android:id="@+id/dkemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFF"
            android:hint="@string/name"
            android:padding="15dp"
            android:textColorHint="@color/cray"
            android:drawableLeft="@drawable/baseline_account_box_24"
            android:drawablePadding="10dp"/>

        <EditText
            android:id="@+id/dktaikhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFF"
            android:hint="@string/username"
            android:padding="15dp"
            android:textColorHint="@color/cray"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10dp"/>

        <EditText
            android:id="@+id/dkmatkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFF"
            android:hint="@string/password"
            android:padding="15dp"
            android:textColorHint="@color/cray"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="10dp"/>

        <Button
            android:id="@+id/dkdangky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/register"
            android:textSize="20dp"/>
    </LinearLayout>
</RelativeLayout>
